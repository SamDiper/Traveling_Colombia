<div id="Crear" class="max-w-3xl mx-auto mt-10 bg-white p-8 rounded-lg shadow-lg hidden">
        <h2 class="text-2xl font-bold mb-6 text-center text-[#38BDF8]">Registrar Reserva</h2>

        <form class="grid grid-cols-1 md:grid-cols-2 gap-6">

            <!-- Fecha Reserva -->
            <div>
                <label for="fecha_reserva" class="block text-gray-700 font-semibold mb-1">Fecha de Reserva</label>
                <input type="date" id="fecha_reserva" name="Fecha_Reserva"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#38BDF8]"
                    required />
            </div>

            <!-- Id Viaje -->
            <div>
                <label for="id_viaje" class="block text-gray-700 font-semibold mb-1">ID del Viaje</label>
                <input type="number" id="id_viaje" name="Id_Viaje" placeholder="Ej: 3"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#38BDF8]"
                    required />
            </div>

            <!-- Estado Reserva -->
            <div>
                <label for="estado" class="block text-gray-700 font-semibold mb-1">Estado de la Reserva</label>
                <select id="estado" name="estado_Reserva"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#38BDF8]"
                    required>
                    <option value="">Seleccione estado</option>
                    <option value="Pendiente">Pendiente</option>
                    <option value="Confirmada">Confirmada</option>
                    <option value="Cancelada">Cancelada</option>
                </select>
            </div>

            <!-- Id Usuario -->
            <div>
                <label for="id_usuario" class="block text-gray-700 font-semibold mb-1">ID del Usuario</label>
                <input type="number" id="id_usuario" name="Id_Usuario" placeholder="Ej: 7"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#38BDF8]"
                    required />
            </div>

            <!-- Id Plan -->
            <div>
                <label for="id_plan" class="block text-gray-700 font-semibold mb-1">ID del Plan</label>
                <input type="number" id="id_plan" name="Id_Plan" placeholder="Ej: 12"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#38BDF8]"
                    required />
            </div>

            <!-- BotÃ³n Enviar -->
            <div class="md:col-span-2 flex justify-center">
                <button type="submit"
                    class="bg-[#38BDF8] text-white font-bold py-2 px-6 rounded-lg hover:bg-[#0ea5e9] transition duration-300">
                    Registrar Reserva
                </button>
            </div>

        </form>
    </div>