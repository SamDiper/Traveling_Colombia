<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgenciaViajes</title>
    <script type="importmap"></script>

    <link href="~/css/output.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
        integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body data-theme="light" class="relative overflow-hidden font-sans bg-white">

    <!--´parte inferior-->
    <div class="relative">

        <!-- Botón de menú -->
        <div class="navbar bg-[#2e86c1] shadow-sm h-40 ">
            <div class="navbar-start">
                <div class="dropdown">
                    <button id="menuButton" class="fixed top-4 left-4 z-50 rounded bg-[#2e86c1] px-4 py-2 text-white">
                        ☰ Menú
                    </button>
                </div>
            </div>
            <div class="navbar-center">
                <a asp-action="Index" asp-controller="Home">
                    <img class="w-30 h-30 rounded-full" src="https://res.cloudinary.com/dezff5yvd/image/upload/v1746645460/Traveling_colombia_emyqpp.png" alt="">
                </a>
            </div>
        </div>

        <!-- Overlay -->
        <div id="overlay"></div>

        <!-- Contenedor con Sidebar + Main -->
        <div class="flex">

            <!-- Sidebar -->
            <aside id="sidebar"
                class="fixed top-0 left-0 z-50 h-full w-64 -translate-x-full transform bg-[#0f172a] p-4 text-sm text-white transition-transform duration-300 flex flex-col justify-between">

                <!-- Parte superior: navegación -->
                <nav class="space-y-2">
                    <div class="rounded bg-[#1e293b] px-4 py-2 font-semibold">General</div>
                    <div>
                        <button onclick="toggleAccordion('teamsMenu')"
                            class="flex w-full items-center justify-between rounded px-4 py-2 hover:bg-[#1e293b]">
                            <span>Destinos</span>
                            <span>▾</span>
                        </button>
                        <div id="teamsMenu" class="mt-1 ml-6 hidden space-y-1 text-gray-400">
                            <div class="cursor-pointer hover:text-white">Viajes</div>
                            <div class="cursor-pointer hover:text-white">Hoteles</div>
                            <div class="cursor-pointer hover:text-white">Reservas</div>
                        </div>
                    </div>
                    <div  class="cursor-pointer rounded px-4 py-2 text-gray-300 hover:bg-[#1e293b] hover:text-white">
                        <a asp-action="Pagos" asp-controller="Cliente">Pagos</a>
                    </div>
                    <button onclick="toggleAccordion('accountMenu')"
                        class="flex w-full items-center justify-between rounded px-4 py-2 hover:bg-[#1e293b]">
                        <span>Detalles</span>
                        <span>▾</span>
                    </button>
                    <div id="accountMenu" class="mt-1 ml-6 hidden space-y-1 text-gray-400">
                        <div class="cursor-pointer hover:text-white">Informes</div>
                        <div class="cursor-pointer hover:text-white">Estadísticas</div>
                    </div>
                </nav>

                <!-- Parte inferior: Perfil + Botón cerrar -->
                <div class="space-y-4 absolute left-10 top-[820px] ">
                    <!-- Perfil -->
                    <div class="flex items-center space-x-3">
                        <div class="avatar">
                            <div class="h-10 w-10 rounded-full">
                                <img src="https://img.daisyui.com/images/stock/photo-1534528741775-53994a69daeb.webp" />
                            </div>
                        </div>
                        <div class="mr-10" >
                            <p class="font-bold text-sm">Alejandro <br>Soto López</p>
                        </div>
                        <i class="fa-solid fa-right-from-bracket cursor-pointer "></i>
                    </div>
                </div>

                <!-- Botón cerrar -->
                <button id="closeSidebar" class="w-full rounded bg-blue-400 px-4 py-2 hover:bg-blue-700">
                    Cerrar
                </button>
        </div>

        </aside>

        <!-- Contenido Principal -->
        <main id="mainContent" class="flex-1 bg-white p-6 text-black transition-all duration-300">

            @RenderBody()
        </main>
    </div>


    </div>



    </div>

    <!-- Navbar inferior -->
    <nav id="bottomNavbar"
        class="fixed right-0 bottom-0 left-0 z-40 ml-0 flex justify-around bg-[#2e86c1] p-3 text-white shadow-inner transition-all duration-300">
        <a href="#" class="hover:text-yellow-300 ">Inicio</a>
        <a href="#" class="hover:text-yellow-300">Buscar</a>
        <a href="#" class="hover:text-yellow-300">Perfil</a>
        <a href="#" class="hover:text-yellow-300">Ajustes</a>
    </nav>

    <script>

        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('overlay');
        const menuButton = document.getElementById('menuButton');
        const closeSidebar = document.getElementById('closeSidebar');
        const mainContent = document.getElementById('mainContent');
        const bottomNavbar = document.getElementById('bottomNavbar');

        menuButton.addEventListener('click', () => {
            sidebar.classList.remove('-translate-x-full');
            overlay.classList.remove('hidden');
            mainContent.classList.add('ml-64');
            bottomNavbar.classList.add('ml-64');
        });

        closeSidebar.addEventListener('click', () => {
            sidebar.classList.add('-translate-x-full');
            overlay.classList.add('hidden');
            mainContent.classList.remove('ml-64');
            bottomNavbar.classList.remove('ml-64');
        });

        overlay.addEventListener('click', () => {
            sidebar.classList.add('-translate-x-full');
            overlay.classList.add('hidden');
            mainContent.classList.remove('ml-64');
            bottomNavbar.classList.remove('ml-64');
        });

        function toggleAccordion(id) {
            const el = document.getElementById(id);
            el.classList.toggle('hidden');
        }
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
