<div class="min-h-screen bg-gradient-to-b  flex flex-col items-center p-6 space-y-6">
    <!-- Botones superiores -->
    <div
        class="flex w-full justify-between items-center bg-[#3085BC]  rounded-xl shadow-lg p-4 px-16 flex-nowrap overflow-x-auto gap-2">

        <button id="btn-Lista" onclick="mostrarApartado('Lista')" class="text-black cursor-pointer bg-[#6ca7cf]  px-2 py-1 rounded-full 
               text-sm sm:text-base md:text-lg 
               w-24 sm:w-28 md:w-32 lg:w-40 
               h-10 sm:h-12 md:h-14">
            Lista
        </button>


        <button id="btn-Crear" onclick="mostrarApartado('Crear')" class="text-black cursor-pointer bg-white font-semibold px-2 py-1 rounded-full 
               text-sm sm:text-base md:text-lg 
               w-24 sm:w-28 md:w-32 lg:w-40 
               h-10 sm:h-12 md:h-14">
            Crear
        </button>

    </div>



    <!-- Contenedor de viajes -->
    <div id="Lista" class=" w-full max-w-[1500px] rounded-2xl p-8 ">

        <div
            class="relative p-10 rounded-xl bg-[url('https://img.freepik.com/foto-gratis/terminal-aeropuerto_1417-1456.jpg?semt=ais_hybrid&w=740')] bg-cover ">
            <h2
                class="relative bottom-18  text-2xl w-[900px] h-[60px] rounded-full  border left-60 bg-white font-bold text-center pt-2">
                Gestion de Viajes</h2>
            <!-- Formulario -->
            <form class="flex flex-wrap gap-x-10 gap-y-5 w-full p-6  bg-white rounded-xl shadow-lg">
                <!-- Campos del formulario -->


                <!-- Campos personalizados -->
                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Nombre</label>
                    <input type="text" placeholder="Ingrese nombre" class="p-2 rounded-lg border border-gray-300" />
                </div>
                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Destino</label>
                    <select class="p-2 rounded-lg border border-gray-300">
                        <option value="">Seleccione Destino</option>
                        <option value="1">1</option>
                    </select>
                </div>
                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Tipo</label>
                    <select class="p-2 rounded-lg border border-gray-300">
                        <option value="">Seleccione Tipo</option>
                        <option value="1">1</option>
                    </select>
                </div>
                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Clase</label>
                    <select class="p-2 rounded-lg border border-gray-300">
                        <option value="">Seleccione Clase</option>
                        <option value="1">1</option>
                    </select>
                </div>
                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Fecha Mínima</label>
                    <input type="date" class="p-2 rounded-lg border border-gray-300" />
                </div>
                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Fecha Máxima</label>
                    <input type="date" class="p-2 rounded-lg border border-gray-300" />
                </div>
                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Precio Mínimo</label>
                    <input type="number" placeholder="Ingrese precio mínimo"
                        class="p-2 rounded-lg border border-gray-300" />
                </div>
                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Precio Máximo</label>
                    <input type="number" placeholder="Ingrese precio máximo"
                        class="p-2 rounded-lg border border-gray-300" />
                </div>

                <!-- Botón buscar -->
                <div class="flex justify-center w-full mt-4">
                    <button type="submit"
                        class="bg-[#3085BC] hover:bg-[#3084bcd2] cursor-pointer text-white font-bold py-3 px-8 rounded-full transition duration-300">
                        Buscar
                    </button>
                </div>
            </form>

            <!-- Tabla de viajes -->
            <div
                class="bg-white w-full max-w-full h-[400px] p-4 mt-6 overflow-x-auto overflow-y-auto rounded-xl shadow-md">
                <table class="min-w-[700px] w-full  border-collapse table-auto">
                    <thead>
                        <tr class="bg-[#3085BC] text-white text-sm sm:text-base">
                            <th class="px-4 py-2 border">Usuario</th>
                            <th class="px-4 py-2 border">Destino</th>
                            <th class="px-4 py-2 border">Fecha Viaje</th>
                            <th class="px-4 py-2 border">H. Salida</th>
                            <th class="px-4 py-2 border">H. Llegada</th>
                            <th class="px-4 py-2 border">Precio</th>
                            <th class="px-4 py-2 border">Aerolínea</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="text-sm sm:text-base hover:bg-[#3085BC]/30 transition">
                            <td class="px-4 py-2 border">Juan</td>
                            <td class="px-4 py-2 border">Cartagena</td>
                            <td class="px-4 py-2 border">2025-06-01</td>
                            <td class="px-4 py-2 border">08:00</td>
                            <td class="px-4 py-2 border">10:30</td>
                            <td class="px-4 py-2 border">$300.000</td>
                            <td class="px-4 py-2 border">Avianca</td>
                        </tr>



                        <!-- Más filas aquí si lo necesitas -->
                    </tbody>
                </table>
            </div>

        </div>
    </div>

    <!-- contenedor formulario viajes-->
    <div id="Crear" class="max-w-2xl mx-auto bg-white shadow-lg rounded-xl p-8 hidden">
        <h1 class="text-2xl font-bold mb-6 text-center">Formulario de Viajes</h1>
        <form class="space-y-4">
            <!-- Id_Viaje -->
            <div>
                <label class="block text-sm font-medium text-gray-700">ID Viaje</label>
                <input type="text" name="id_viaje"
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            </div>

            <!-- Id_Destino -->
            <div>
                <label class="block text-sm font-medium text-gray-700">ID Destino</label>
                <input type="text" name="id_destino"
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            </div>

            <!-- Hora_Salida -->
            <div>
                <label class="block text-sm font-medium text-gray-700">Hora de Salida</label>
                <input type="time" name="hora_salida"
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            </div>

            <!-- Hora_Llegada -->
            <div>
                <label class="block text-sm font-medium text-gray-700">Hora de Llegada</label>
                <input type="time" name="hora_llegada"
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            </div>

            <!-- Fecha_Viaje -->
            <div>
                <label class="block text-sm font-medium text-gray-700">Fecha del Viaje</label>
                <input type="date" name="fecha_viaje"
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            </div>

            <!-- Precio_Viaje -->
            <div>
                <label class="block text-sm font-medium text-gray-700">Precio del Viaje</label>
                <input type="number" name="precio_viaje" step="0.01"
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            </div>

            <!-- Cantidad_Puestos -->
            <div>
                <label class="block text-sm font-medium text-gray-700">Cantidad de Puestos</label>
                <input type="number" name="cantidad_puestos"
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            </div>

            <!-- Id_Aerolinea -->
            <div>
                <label class="block text-sm font-medium text-gray-700">ID Aerolínea</label>
                <input type="text" name="id_aerolinea"
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            </div>

            <!-- Imagen -->
            <div>
                <label class="block text-sm font-medium text-gray-700">Imagen</label>
                <input type="file" name="imagen" accept="image/*"
                    class="mt-1 block w-full text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" />
            </div>

            <!-- Botón -->
            <div class="pt-4">
                <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700">
                    Guardar Viaje
                </button>
            </div>
        </form>
    </div>


</div>


@section Scripts {
    <script>
        function mostrarApartado(id) {

            document.getElementById('Lista').classList.add('hidden');
            document.getElementById('Crear').classList.add('hidden');

            document.getElementById('btn-Lista').classList.add('bg-white');
            document.getElementById('btn-Crear').classList.add('bg-white');
            document.getElementById(`btn-Lista`).classList.replace('text-white', 'text-black');
            document.getElementById(`btn-Crear`).classList.replace('text-white', 'text-black');




            document.getElementById(`btn-${id}`).classList.replace('bg-white', 'bg-[#6ca7cf]');
            document.getElementById(`btn-${id}`).classList.replace('text-black', 'text-white');
            document.getElementById(id).classList.remove('hidden');
        }
    </script>
}
