<div class="min-h-screen bg-gradient-to-b  flex flex-col items-center p-6 space-y-6">
    <!-- Botones superiores -->
    <div
        class="flex w-full justify-evenly items-center bg-[#3085BC]  rounded-xl shadow-lg p-4 flex-nowrap overflow-x-auto gap-2">

        <button id="btn-Lista" onclick="mostrarApartado('Lista')" class="text-black cursor-pointer bg-[#6ca7cf]  px-2 py-1 rounded-full 
               text-sm sm:text-base md:text-lg 
               w-24 sm:w-28 md:w-32 lg:w-40 
               h-10 sm:h-12 md:h-14">
            Lista
        </button>


        <div class="w-16 h-16 sm:w-20 sm:h-20 md:w-24 md:h-24 bg-white rounded-full">
            <img src="~/imagenes/logviajescolombia.png" class="w-full h-full bg-center " alt="">
        </div>

        <button id="btn-Crear" onclick="mostrarApartado('Crear')" class="text-black cursor-pointer bg-white font-semibold px-2 py-1 rounded-full 
               text-sm sm:text-base md:text-lg 
               w-24 sm:w-28 md:w-32 lg:w-40 
               h-10 sm:h-12 md:h-14">
            Crear
        </button>

    </div>



    <!-- Contenedor de viajes -->
    <div id="Lista" class="bg-white w-full max-w-[1500px] rounded-2xl p-8 ">
        <div
            class="relative p-10 rounded-xl bg-[url('https://img.freepik.com/foto-gratis/terminal-aeropuerto_1417-1456.jpg?semt=ais_hybrid&w=740')] bg-cover ">
            <h2
                class="relative bottom-18  text-2xl w-[900px] h-[60px] rounded-full  border left-60 bg-white font-bold text-center pt-2">
                Gestion de Planes</h2>
            <!-- Formulario -->
            <form class="flex flex-wrap gap-x-10 gap-y-5 w-full p-6 bg-white rounded-xl shadow-lg">

                <!-- Campos personalizados -->
                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Nombre</label>
                    <input type="text" placeholder="Ingrese nombre" class="p-2 rounded-lg border border-gray-300" />
                </div>
                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Plan</label>
                    <select class="p-2 rounded-lg border border-gray-300">
                        <option value="">Seleccione Plan</option>
                        <option value="1">1</option>
                    </select>
                </div>
                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Tipo</label>
                    <select class="p-2 rounded-lg border border-gray-300">
                        <option value="">Seleccione Tipo</option>
                        <option value="1">1</option>
                    </select>
                </div>

                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Fecha Mínima</label>
                    <input type="date" class="p-2 rounded-lg border border-gray-300" />
                </div>
                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Fecha Máxima</label>
                    <input type="date" class="p-2 rounded-lg border border-gray-300" />
                </div>
                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Precio Mínimo</label>
                    <input type="number" placeholder="Ingrese precio mínimo"
                        class="p-2 rounded-lg border border-gray-300" />
                </div>
                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Precio Máximo</label>
                    <input type="number" placeholder="Ingrese precio máximo"
                        class="p-2 rounded-lg border border-gray-300" />
                </div>

                <!-- Botón buscar -->
                <div class="flex justify-center w-full mt-4">
                    <button type="submit"
                        class="bg-[#3085BC] hover:bg-[#3084bcd2] text-white font-bold py-3 px-8 rounded-full transition duration-300">
                        Buscar
                    </button>
                </div>
            </form>

            <!-- Tabla de planes -->
            <div
                class="bg-white w-full max-w-full h-[400px] p-4 mt-6 overflow-x-auto overflow-y-auto rounded-xl shadow-md">
                <table class="min-w-[700px] w-full  border-collapse table-auto">
                    <thead>
                        <tr class="bg-[#3085BC] text-white text-sm sm:text-base">
                            <th class="px-4 py-2 border">imagen</th>
                            <th class="px-4 py-2 border">Plan</th>
                            <th class="px-4 py-2 border">Usuario</th>
                            <th class="px-4 py-2 border">Descripcion</th>
                            <th class="px-4 py-2 border">Aerolínea</th>
                            <th class="px-4 py-2 border">Hotel</th>
                            <th class="px-4 py-2 border">Precio</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="text-sm sm:text-base hover:bg-[#3085BC]/30 transition">
                            <td class="px-4 py-2 border"></td>
                            <td class="px-4 py-2 border"></td>
                            <td class="px-4 py-2 border"></td>
                            <td class="px-4 py-2 border"></td>
                            <td class="px-4 py-2 border"></td>
                            <td class="px-4 py-2 border"></td>
                            <td class="px-4 py-2 border"></td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>

    <!-- contenedor formulario viajes-->
    <div id="Crear" class="max-w-4xl mx-auto mt-10 bg-white p-8 rounded-lg shadow-lg hidden">
        <h2 class="text-2xl font-bold mb-6 text-center text-[#3085BC]">Registrar Plan Turístico</h2>

        <form class="grid grid-cols-1 md:grid-cols-2 gap-6">

            <!-- Id_Destino_Ida -->
            <div>
                <label for="destino_ida" class="block text-gray-700 font-semibold mb-1">Destino Ida</label>
                <input type="number" id="destino_ida" name="Id_Destino_Ida" placeholder="Ej: 101"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#3085BC]"
                    required />
            </div>

            <!-- Id_Destino_Llegada -->
            <div>
                <label for="destino_llegada" class="block text-gray-700 font-semibold mb-1">Destino Llegada</label>
                <input type="number" id="destino_llegada" name="Id_Destino_Llegada" placeholder="Ej: 105"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#3085BC]"
                    required />
            </div>

            <!-- Nombre_Plan -->
            <div>
                <label for="nombre_plan" class="block text-gray-700 font-semibold mb-1">Nombre del Plan</label>
                <input type="text" id="nombre_plan" name="Nombre_Plan" placeholder="Plan Caribe 2025"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#3085BC]"
                    required />
            </div>

            <!-- Id_tipo_plan -->
            <div>
                <label for="tipo_plan" class="block text-gray-700 font-semibold mb-1">Tipo de Plan</label>
                <select id="tipo_plan" name="Id_tipo_plan"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#3085BC]"
                    required>
                    <option value="">Seleccione una opción</option>
                    <option value="1">Familiar</option>
                    <option value="2">Romántico</option>
                    <option value="3">Aventura</option>
                </select>
            </div>

            <!-- Descripción -->
            <div class="md:col-span-2">
                <label for="descripcion" class="block text-gray-700 font-semibold mb-1">Descripción</label>
                <textarea id="descripcion" name="Descripcion" rows="4" placeholder="Escriba una descripción del plan"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#3085BC]"
                    required></textarea>
            </div>

            <!-- Cantidad_Personas -->
            <div>
                <label for="cantidad" class="block text-gray-700 font-semibold mb-1">Cantidad de Personas</label>
                <input type="number" id="cantidad" name="Cantidad_Personas" placeholder="Ej: 4"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#3085BC]"
                    required />
            </div>

            <!-- Imagen -->
            <div>
                <label for="imagen" class="block text-gray-700 font-semibold mb-1">Imagen</label>
                <input type="file" id="imagen" name="imagen"
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#3085BC]" />
            </div>

            <!-- Precio_Plan -->
            <div>
                <label for="precio" class="block text-gray-700 font-semibold mb-1">Precio del Plan</label>
                <input type="number" id="precio" name="Precio_Plan" step="0.01" placeholder="Ej: 1500000"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#3085BC]"
                    required />
            </div>

            <!-- Id_Hotel -->
            <div>
                <label for="hotel" class="block text-gray-700 font-semibold mb-1">Hotel</label>
                <input type="number" id="hotel" name="Id_Hotel" placeholder="Ej: 2"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#3085BC]"
                    required />
            </div>

            <!-- Id_Aerolinea -->
            <div>
                <label for="aerolinea" class="block text-gray-700 font-semibold mb-1">Aerolínea</label>
                <input type="number" id="aerolinea" name="Id_Aerolinea" placeholder="Ej: 5"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#3085BC]"
                    required />
            </div>

            <!-- Botón de Enviar -->
            <div class="md:col-span-2 flex justify-center">
                <button type="submit"
                    class="bg-[#3085BC] text-white font-bold py-2 px-6 rounded-lg hover:bg-[#25699a] transition duration-300">
                    Registrar Plan
                </button>
            </div>

        </form>
    </div>



</div>


@section Scripts {
    <script>
        function mostrarApartado(id) {

            document.getElementById('Lista').classList.add('hidden');
            document.getElementById('Crear').classList.add('hidden');

            document.getElementById('btn-Lista').classList.add('bg-white');
            document.getElementById('btn-Crear').classList.add('bg-white');
            document.getElementById(`btn-Lista`).classList.replace('text-white', 'text-black');
            document.getElementById(`btn-Crear`).classList.replace('text-white', 'text-black');




            document.getElementById(`btn-${id}`).classList.replace('bg-white', 'bg-[#6ca7cf]');
            document.getElementById(`btn-${id}`).classList.replace('text-black', 'text-white');
            document.getElementById(id).classList.remove('hidden');
        }
    </script>
}
