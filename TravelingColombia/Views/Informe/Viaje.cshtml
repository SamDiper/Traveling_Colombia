@model TravelingColombia.ViewModels.ViajesViewModel

<div class="min-h-screen bg-gradient-to-b  flex flex-col items-center p-6 space-y-6">
    <!-- Contenedor de viajes -->
    <div class=" w-full max-w-[1500px] rounded-2xl p-8 ">

        <div
            class="relative p-10 rounded-xl bg-[url('https://img.freepik.com/foto-gratis/terminal-aeropuerto_1417-1456.jpg?semt=ais_hybrid&w=740')] bg-cover ">
            <h2
                class="relative bottom-18  text-2xl w-[900px] h-[60px] rounded-full  border left-60 bg-white font-bold text-center pt-2">
                Informes de Viajes</h2>
            <!-- Formulario de filtros -->
            <form method="post" asp-action="Viaje" asp-controller="Informe" class="flex flex-wrap gap-x-10 gap-y-5 w-full p-6 bg-white rounded-xl shadow-lg">
                
                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Destino Ida</label>
                    <select name="DestinoIda" class="p-2 rounded-lg border border-gray-300">
                        <option value="">Seleccione Destino Ida</option>
                        @foreach (var item in Model.ListadoViajes)
                        {
                            <option value="@item.IdDestinoIdaNavigation?.NombreDestino">@item.IdDestinoIdaNavigation?.NombreDestino</option>
                        }
                    </select>
                </div>
                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Destino Llegada</label>
                    <select name="DestinoLlegada" class="p-2 rounded-lg border border-gray-300">
                        <option value="">Seleccione Destino Llegada</option>
                        @foreach (var item in Model.ListadoViajes)
                        {
                            <option value="@item.IdDestinoLlegadaNavigation?.NombreDestino">@item.IdDestinoLlegadaNavigation?.NombreDestino</option>
                        }
                    </select>
                </div>

                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Hora Salida</label>
                    <input name="HoraSalida" type="time" class="p-2 rounded-lg border border-gray-300" />
                </div>

                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Hora Llegada</label>
                    <input name="HoraLlegada" type="time" class="p-2 rounded-lg border border-gray-300" />
                </div>

                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Fecha Mínima</label>
                    <input name="FechaMinima" type="date" class="p-2 rounded-lg border border-gray-300" />
                </div>

                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Fecha Máxima</label>
                    <input name="FechaMaxima" type="date" class="p-2 rounded-lg border border-gray-300" />
                </div>

                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Precio Mínimo</label>
                    <input name="PrecioMinimo" type="number" placeholder="Precio mínimo" class="p-2 rounded-lg border border-gray-300" />
                </div>

                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Precio Máximo</label>
                    <input name="PrecioMaximo" type="number" placeholder="Precio máximo" class="p-2 rounded-lg border border-gray-300" />
                </div>

                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Aerolinea</label>
                    <select name="AerolineaId" class="p-2 rounded-lg border border-gray-300">
                        <option value="">Seleccione Aerolinea</option>
                        @foreach (var item in Model.ListadoAerolineas)
                        {
                            <option value="@item.IdAerolinea">@item.NombreAerolinea</option>
                        }
                    </select>
                </div>

                <div class="flex justify-center w-full mt-4">
                    <button type="submit" class="bg-[#3085BC] hover:bg-[#3084bcd2] text-white font-bold py-3 px-8 rounded-full transition duration-300">
                        Listar
                    </button>
                </div>
            </form>


            <!-- Tabla de viajes -->
            <div
                class="bg-white w-full max-w-full h-[400px] p-4 mt-6 overflow-x-auto overflow-y-auto rounded-xl shadow-md">
                <table class="min-w-[700px] w-full  border-collapse table-auto">
                    <thead>
                        <tr class="bg-[#3085BC] text-white text-sm sm:text-base">
                            <th class="px-4 py-2 border">Id Viaje</th>
                            <th class="px-4 py-2 border">Imagen</th>
                            <th class="px-4 py-2 border">Destino Ida</th>
                            <th class="px-4 py-2 border">Destino Llegada</th>
                            <th class="px-4 py-2 border">H. Salida</th>
                            <th class="px-4 py-2 border">H. Llegada</th>
                            <th class="px-4 py-2 border">Fecha Viaje</th>
                            <th class="px-4 py-2 border">Precio</th>
                            <th class="px-4 py-2 border">Cantidad Puestos</th>
                            <th class="px-4 py-2 border">Aerolínea</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ListadoViajes)
                        {
                            <tr class="text-sm  sm:text-base hover:bg-[#3085BC]/30 transition">

                                <td class="px-4 py-2 border">@item.IdViaje</td>
                                <td class="px-4 py-2 border">@item.Imagen</td>
                                <td class="px-4 py-2 border">@item.IdDestinoIdaNavigation?.NombreDestino</td>
                                <td class="px-4 py-2 border">@item.IdDestinoLlegadaNavigation?.NombreDestino</td>
                                <td class="px-4 py-2 border">@item.HoraSalida</td>
                                <td class="px-4 py-2 border">@item.HoraLlegada</td>
                                <td class="px-4 py-2 border">@item.FechaViaje</td>
                                <td class="px-4 py-2 border">$@item.PrecioViaje</td>
                                <td class="px-4 py-2 border">@item.CantidadPuestos</td>
                                <td class="px-4 py-2 border">@item.IdAerolineaNavigation?.NombreAerolinea</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>



</div>
