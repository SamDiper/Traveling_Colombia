<div class="min-h-screen bg-gradient-to-b from-sky-400 to-blue-800 flex flex-col items-center p-6 space-y-6">
    <!-- Botones superiores -->
    <div class="flex w-full justify-evenly bg-white rounded-xl shadow-lg p-4">
        <button id="btn-viajes" onclick="mostrarSeccion('viajes')"
            class=" text-black font-semibold px-6 py-2 rounded-full">Viajes</button>
        <button id="btn-planes" onclick="mostrarSeccion('planes')"
            class=" text-black font-semibold px-6 py-2 rounded-full">Planes</button>
        <button id="btn-reservas" onclick="mostrarSeccion('reservas')"
            class=" text-black font-semibold px-6 py-2 rounded-full">Reservas</button>
        <button id="btn-pagos" onclick="mostrarSeccion('pagos')"
            class=" text-black font-semibold px-6 py-2 rounded-full">Pagos</button>
    </div>

    <!-- Contenedor de viajes -->
    <div id="viajes" class="bg-white w-full max-w-[1500px]  rounded-2xl p-8">
        <div class="flex justify-between w-full mt-4 gap-8">
            <button type="button" onclick="mostrarapartado('tabla')"
                class="bg-lime-500 hover:bg-lime-600 text-white font-bold py-3 px-8 rounded-full transition duration-300">
                Listar
            </button>
            <h2 class="text-2xl font-bold text-center mb-6"> Viajes</h2>
            <button type="button" onclick="mostrarapartado('formulario')"
                class="bg-lime-500 hover:bg-lime-600 text-white font-bold py-3 px-8 rounded-full transition duration-300">
                Crear
            </button>
        </div>
        <div id="tabla" class="bg-blue-600 p-10 mt-10 rounded-xl">
            <!-- Formulario de búsqueda -->
            <form class="flex flex-wrap gap-x-10 gap-y-5 w-full p-6 bg-white rounded-xl shadow-lg">
                <!-- Campos personalizados -->
                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Nombre</label>
                    <input type="text" placeholder="Ingrese nombre" class="p-2 rounded-lg border border-gray-300" />
                </div>
                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Destino</label>
                    <select class="p-2 rounded-lg border border-gray-300">
                        <option value="">Seleccione Destino</option>
                        <option value="1">1</option>
                    </select>
                </div>
                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Tipo</label>
                    <select class="p-2 rounded-lg border border-gray-300">
                        <option value="">Seleccione Tipo</option>
                        <option value="1">1</option>
                    </select>
                </div>
                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Clase</label>
                    <select class="p-2 rounded-lg border border-gray-300">
                        <option value="">Seleccione Clase</option>
                        <option value="1">1</option>
                    </select>
                </div>
                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Fecha Mínima</label>
                    <input type="date" class="p-2 rounded-lg border border-gray-300" />
                </div>
                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Fecha Máxima</label>
                    <input type="date" class="p-2 rounded-lg border border-gray-300" />
                </div>
                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Precio Mínimo</label>
                    <input type="number" placeholder="Ingrese precio mínimo"
                        class="p-2 rounded-lg border border-gray-300" />
                </div>
                <div class="flex flex-col flex-1 min-w-[200px]">
                    <label class="mb-1 font-semibold text-gray-700">Precio Máximo</label>
                    <input type="number" placeholder="Ingrese precio máximo"
                        class="p-2 rounded-lg border border-gray-300" />
                </div>

                <!-- Botones Buscar y Crear -->
                <button type="button" onclick="mostrarapartado('tabla')"
                    class="bg-lime-500 hover:bg-lime-600 text-white font-bold py-3 px-8 rounded-full transition duration-300">
                    Buscar
                </button>
            </form>

            <!-- Apartado: Tabla de viajes -->
            <div class="bg-white w-full h-[300px] p-6 mt-6 overflow-x-auto rounded-xl">
                <table class="min-w-full border-collapse table-auto">
                    <thead>
                        <tr class="bg-gray-400 text-black">
                            <th class="px-4 py-2 border">Usuario</th>
                            <th class="px-4 py-2 border">Destino</th>
                            <th class="px-4 py-2 border">Fecha Viaje</th>
                            <th class="px-4 py-2 border">H. Salida</th>
                            <th class="px-4 py-2 border">H. Llegada</th>
                            <th class="px-4 py-2 border">Precio</th>
                            <th class="px-4 py-2 border">Aerolínea</th>
                            <th class="px-4 py-2 border">Acciones</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="px-4 py-2 border"></td>
                            <td class="px-4 py-2 border"></td>
                            <td class="px-4 py-2 border"></td>
                            <td class="px-4 py-2 border"></td>
                            <td class="px-4 py-2 border"></td>
                            <td class="px-4 py-2 border"></td>
                            <td class="px-4 py-2 border"></td>
                            <td class="px-4 py-2 border">
                                <div class="flex ">
                                    <button type="button" 
                                        class="bg-blue-300 hover:bg-lime-600 text-white font-bold py-3 px-8 rounded-full transition duration-300">
                                        Editar
                                    </button>
                                    <button type="button" 
                                        class="bg-red-500 hover:bg-lime-600 text-white font-bold py-3 px-8 rounded-full transition duration-300">
                                        Eliminar
                                    </button>
                                </div>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>

        </div>

        <!-- fomulario-->
        <div id="formulario" class="bg-white p-10 mt-6 rounded-xl hidden">
            <h2 class="text-2xl font-bold text-center text-white mb-4">FORMULARIO</h2>
            <!-- Aquí puedes añadir tu propio formulario de creación de viajes -->
            <form class="max-w-2xl mx-auto p-6 bg-gray-200 rounded-lg shadow-md space-y-6">
                <h2 class="text-2xl font-bold text-center">Registrar Viaje</h2>

                <div>
                    <label class="block text-gray-700 mb-2">Destino</label>
                    <input type="text" name="id_destino" class="w-full p-3 border border-gray-300 rounded-lg"
                        placeholder="ID Destino">
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-gray-700 mb-2">Hora de Salida</label>
                        <input type="time" name="hora_salida" class="w-full p-3 border border-gray-300 rounded-lg">
                    </div>
                    <div>
                        <label class="block text-gray-700 mb-2">Hora de Llegada</label>
                        <input type="time" name="hora_llegada" class="w-full p-3 border border-gray-300 rounded-lg">
                    </div>
                </div>

                <div>
                    <label class="block text-gray-700 mb-2">Fecha del Viaje</label>
                    <input type="date" name="fecha_viaje" class="w-full p-3 border border-gray-300 rounded-lg">
                </div>

                <div>
                    <label class="block text-gray-700 mb-2">Precio del Viaje</label>
                    <input type="number" step="0.01" name="precio_viaje"
                        class="w-full p-3 border border-gray-300 rounded-lg" placeholder="Precio">
                </div>

                <div>
                    <label class="block text-gray-700 mb-2">Cantidad de Puestos</label>
                    <input type="number" name="cantidad_puestos" class="w-full p-3 border border-gray-300 rounded-lg"
                        placeholder="Cantidad">
                </div>

                <div>
                    <label class="block text-gray-700 mb-2">Aerolínea</label>
                    <input type="text" name="id_aerolinea" class="w-full p-3 border border-gray-300 rounded-lg"
                        placeholder="ID Aerolínea">
                </div>

                <div>
                    <label class="block text-gray-700 mb-2">Imagen del Viaje</label>
                    <input type="file" name="imagen" class="w-full p-3 border border-gray-300 rounded-lg">
                </div>

                <div class="text-center">
                    <button type="submit"
                        class="bg-blue-400 text-white px-6 py-3 rounded-lg hover:bg-blue-600 transition">Guardar
                        Viaje</button>
                </div>
            </form>

        </div>
        <!-- fin formulario-->
    </div>


</div>

@section Scripts {
    <script>
        function mostrarSeccion(id) {
            document.getElementById('viajes').classList.add('hidden');


            document.getElementById('btn-viajes').classList.add('bg-white');
            document.getElementById('btn-planes').classList.add('bg-white');
            document.getElementById('btn-reservas').classList.add('bg-white');
            document.getElementById('btn-pagos').classList.add('bg-white');



            document.getElementById(`btn-${id}`).classList.replace('bg-white', 'bg-cyan-300');
            document.getElementById(id).classList.remove('hidden');
        }
        function mostrarapartado(Id) {
            document.getElementById('tabla').classList.add('hidden');
            document.getElementById('formulario').classList.add('hidden');

            document.getElementById(Id).classList.remove('hidden');
        }
    </script>
}
