        <script>
            function mostrarSeccion(id) {
                document.getElementById('viajes').classList.add('hidden');
                document.getElementById('planes').classList.add('hidden');
                document.getElementById('reservas').classList.add('hidden');
                document.getElementById('pagos').classList.add('hidden');
                document.getElementById('btn-viajes').classList.add('bg-white');
                document.getElementById('btn-planes').classList.add('bg-white');
                document.getElementById('btn-reservas').classList.add('bg-white');
                document.getElementById('btn-pagos').classList.add('bg-white');
                document.getElementById(`btn-viajes`).classList.replace('text-white', 'text-black');
                document.getElementById(`btn-planes`).classList.replace('text-white', 'text-black');
                document.getElementById(`btn-reservas`).classList.replace('text-white', 'text-black');
                document.getElementById(`btn-pagos`).classList.replace('text-white', 'text-black');



                document.getElementById(`btn-${id}`).classList.replace('bg-white', 'bg-[#6ca7cf]');
                document.getElementById(`btn-${id}`).classList.replace('text-black', 'text-white');
                document.getElementById(id).classList.remove('hidden');
            }
